<li>
  <strong><%= comment.author.username %></strong> - <small><%= time_ago_in_words(comment.created_at) %> ago</small>
  <br>
  <%= link_to "upvote", comment_upvote_url(comment), method: :post %> |
  <%= link_to "downvote", comment_downvote_url(comment), method: :post %> |
  <%= comment.votes.sum(:value) %>
  <br>
  <%= comment.content %>
  <br>

  <% unless current_page?(comment_path(comment)) %>
    <%= link_to "reply", comment_url(comment) %>
  <% end %>

  <br>
  <%= render "shared/comments", comments: @all_comments[comment.id] %>
</li>
